{
  "name": "@taskjp/server-systemd-coredump",
  "version": "0.1.1",
  "description": "A Model Context Protocol (MCP) server for systemd-coredump",
  "private": false,
  "type": "module",
  "homepage": "https://github.com/signal-slot/mcp-systemd-coredump",
  "repository": {
    "type": "git",
    "url": "https://github.com/signal-slot/mcp-systemd-coredump.git"
  },
  "keywords": [
    "mcp",
    "systemd",
    "coredump",
    "debugging",
    "modelcontextprotocol"
  ],
  "author": "signal-slot",
  "license": "MIT",
  "bin": {
    "systemd-coredump-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "prepublishOnly": "npm run build",
    "release": "npm publish --access public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "axios": "^1.8.1",
    "execa": "^9.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  }
}
